# Exclude .github directory
.github/

# Exclude .kiro directory
.kiro/

# Exclude EMR scripts directory
emr-scripts/

# Exclude all modules except emr-cluster
terraform/modules/*
!terraform/modules/emr-cluster/

# ============================================
# TERRAFORM
# ============================================

# Local .terraform directories
**/.terraform/*

# .tfstate files (should be in remote backend, not git)
*.tfstate
*.tfstate.*
**/.terraform/terraform.tfstate
terraform.tfstate.d/
.terraform.tfstate.lock.info

# Crash log files
crash.log
crash.*.log

# Exclude ALL .tfvars files (they often contain sensitive data)
*.tfvars.json

# Ignore override files
override.tf
override.tf.json
*_override.tf
*_override.tf.json

# Ignore CLI configuration files
.terraformrc
terraform.rc

# Ignore plan files
*.tfplan
tfplan

# Ignore ALL lock files
.terraform.lock.hcl
**/.terraform.lock.hcl

# ============================================
# SYSTEM FILES
# ============================================

# Mac system files
.DS_Store
**/.DS_Store

# IDE files
.vscode/
.idea/
*.iml

# Editor temp files
*.swp
*.swo
*~
.*.sw?

# ============================================
# LOGS & TEMP FILES
# ============================================

# Logs
*.log
logs/
apply.log

# Environment files
.env
.env.*
!.env.example

# Backup files
*.backup
*.bak
*.sh.backup

# Temporary files
tmp/
temp/
*.tmp

# Archives
*.zip
*.tar.gz
*.tgz

# ============================================
# DOCUMENTATION (optional - uncomment to ignore)
# ============================================

# Ignore all markdown files
*.md
*.MD

